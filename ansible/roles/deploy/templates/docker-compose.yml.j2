version: '3.3'
services:

  ui:
    image: "{{ full_project_name }}":ui-latest
    ports:
      - 8080:9292/tcp
    networks:
      - front_net
    restart: always
    depends_on:
      - post
      - comment

  post:
    image: "{{ full_project_name }}":post-py-latest
    networks:
      - back_net
      - front_net
    restart: always
    environment:
      - POST_DATABASE_HOST=post_db
    depends_on:
      - post_db

  comment:
    image: "{{ full_project_name }}":comment-latest
    networks:
      - back_net
      - front_net
    restart: always
    environment:
      - COMMENT_DATABASE_HOST=post_db
    depends_on:
      - post_db

  post_db:
    image: mongo:3.2
    volumes:
      - post_db:/data/db
    networks:
      - back_net
    restart: always

volumes:
  post_db:

networks:
  back_net:
    driver: bridge
  front_net:
    driver: bridge
